{
  "name": "form-server-side-validation",
  "version": "1.0.0",
  "description": "server side form validation",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "concurrently \"npm run start --prefix client\" \"npm run dev --prefix api\"",
    "dev:api": "cd api && npm run dev",
    "dev:client": "cd client && npm run start",
    "build:client": "npm run build --prefix client",
    "build:api": "npm run build --prefix api",
    "build": "npm run build:client && npm run build:api",
    "start": "npm run start --prefix api"
  },
  "author": "Steve Vang",
  "license": "ISC",
  "dependencies": {
    "concurrently": "^7.5.0",
    "dotenv": "^16.0.3"
  },
  "engines": {
    "node": "16.14.0"
  },
  "private": true
}
